rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access only if the userId field in the document matches the authenticated user's uid
    // Allow write access only if the user is authenticated
    match /{document=**} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if request.auth != null;
    }
    
    // More specific rules for the product-costs collection
    match /product-costs/{productId} {
      // Read: Only if the document belongs to the authenticated user
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Create: Only if authenticated and the userId in the document matches the auth user
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Update: Only if authenticated, document belongs to user, and userId isn't being changed
      allow update: if request.auth != null 
                    && resource.data.userId == request.auth.uid 
                    && request.resource.data.userId == request.auth.uid;
      
      // Delete: Only if authenticated and document belongs to user
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
} 